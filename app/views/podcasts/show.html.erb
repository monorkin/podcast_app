<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div class="flex flex-row gap-x-4 mb-6">
      <div class="w-44">
        <%= image_tag @podcast.cover_art_url, class: "rounded-lg shadow" %>
      </div>
      <div>
        <h1 class="text-3xl font-bold mb-5"><%= @podcast.title %></h1>
        <div class="text-gray-500">
          <%= @podcast.description %>
        </div>
      </div>
    </div>

    <ul class="mb-6 flex flex-col gap-y-4">
      <%= render @podcast.episodes.preload(:podcast) %>
    </ul>

    <%= link_to 'Back to podcasts', podcasts_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
